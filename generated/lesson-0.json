{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "text": "Welcome to Buttons and Cards School",
      "size": "Medium",
      "weight": "Bolder",
      "horizontalAlignment": "Center"
    },
    {
      "type": "Image",
      "altText": "Picture of a school",
      "url": "https://cardschool.webexbots.cloud/images/school.png",
      "horizontalAlignment": "Center"
    },
    {
      "type": "TextBlock",
      "text": "This is an open source Webex Teams Bot that helps users and developers become familiar with Webex Teams Buttons and Cards.",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "In this class we'll learn about what a card is, why they might be used, and how applications can use them.   If you are ready to begin just click the **Next Lesson** button to learn what a card is.",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Click **Pick Another Lesson** to browse through the lessons available, or **More Resources** to see what else is available.",
      "wrap": true
    },
    {
      "type": "Input.ChoiceSet",
      "id": "myCardIndex",
      "isMultiSelect": false,
      "isVisible": false,
      "choices": [
        {
          "title": "This hidden choice ensures that myCardIndex is returned with every Action.Submit attachmentAction",
          "value": "0"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "ActionSet",
          "horizontalAlignment": "Center",
          "actions": [
            {
              "type": "Action.Submit",
              "title": "Next Lesson: What is a Card?",
              "data": {
                "nextLesson": true,
                "lessonIndex": 1
              }
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.ShowCard",
      "title": "Pick Another Lesson",
      "card": {
        "type": "AdaptiveCard",
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "body": [
          {
            "type": "Container",
            "items": [
              {
                "type": "TextBlock",
                "text": "Available Lessons:"
              },
              {
                "type": "Input.ChoiceSet",
                "id": "jumpToLessonIndex",
                "choices": [
                  {
                    "title": "Introduction",
                    "value": "0"
                  },
                  {
                    "title": "Lesson 1: What is a Card?",
                    "value": "1"
                  },
                  {
                    "title": "Lesson 2: Sending A Card",
                    "value": "2"
                  },
                  {
                    "title": "Lesson 3: Designing a Card",
                    "value": "3"
                  },
                  {
                    "title": "Lesson 4: Displaying Complex Info",
                    "value": "4"
                  }
                ]
              },
              {
                "type": "ActionSet",
                "actions": [
                  {
                    "type": "Action.Submit",
                    "title": "Go To Lesson!",
                    "id": "gotoLesson",
                    "data": {
                      "nextLesson": false,
                      "pickAnotherLesson": true
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "type": "Action.ShowCard",
      "title": "More Resources",
      "card": {
        "type": "AdaptiveCard",
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "body": [
          {
            "type": "ActionSet",
            "actions": [
              {
                "type": "Action.OpenUrl",
                "title": "Buttons and Cards Developers Guide",
                "url": "https://developer.webex.com/docs/api/guides/cards"
              },
              {
                "type": "Action.OpenUrl",
                "title": "Buttons and Cards Designer",
                "url": "https://developer.webex.com/adaptive-cards-designer"
              },
              {
                "type": "Action.OpenUrl",
                "title": "See this card's source",
                "url": "https://github.com/jpjpjp/webex-card-school/blob/master/generated/lesson-5.json"
              },
              {
                "type": "Action.OpenUrl",
                "title": "See this App's Source",
                "url": "https://github.com/jpjpjp/webex-card-school"
              },
              {
                "type": "Action.OpenUrl",
                "title": "Join the Ask B&C School Webex Teams Space",
                "url": "https://eurl.io/#SJiS9VKTH"
              }
            ]
          },
          {
            "type": "Container",
            "items": [
              {
                "type": "TextBlock",
                "text": "Do you have questions, comments or suggestions?\n\nWe'd love to get your feedback on this bot or any aspect of the Webex Teams Buttons and Cards feature.",
                "wrap": true
              },
              {
                "type": "Input.Text",
                "id": "feedback",
                "isMultiline": true,
                "placeholder": "Enter your feedback"
              },
              {
                "type": "ActionSet",
                "actions": [
                  {
                    "type": "Action.Submit",
                    "title": "Send Feedback",
                    "data": {}
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ]
}