[
  {
    "type": "Action.ShowCard",
    "title": "Pick Another Lesson",
    "card": {
      "type": "AdaptiveCard",
      "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
      "body": [
        {
          "type": "Container",
          "items": [
            {
              "type": "TextBlock",
              "text": "Available Lessons:"
            },
            {
              "type": "Input.ChoiceSet",
              "id": "jumpToLessonIndex",
              "choices": [
                {
                  "title": "Introduction",
                  "value": "0"
                },
                {
                  "title": "Lesson 1: Card Specifications",
                  "value": "1"
                },
                {
                  "title": "Lesson 2: What is a Card?",
                  "value": "2"
                },
                {
                  "title": "Lesson 3: Sending A Card",
                  "value": "3"
                },
                {
                  "title": "Lesson 4: Designing a Card",
                  "value": "4"
                },
                {
                  "title": "Lesson 5: Displaying Complex Info",
                  "value": "5"
                }
              ]
            },
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "title": "Go To Lesson!",
                  "id": "gotoLesson",
                  "data": {
                    "nextLesson": false,
                    "pickAnotherLesson": true
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  },
  {
    "type": "Action.ShowCard",
    "title": "More Resources",
    "card": {
      "type": "AdaptiveCard",
      "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
      "body": [
        {
          "type": "TextBlock",
          "text": "Helpful Resources",
          "size": "Medium",
          "weight": "Bolder"
        },
        {
          "type": "Image",
          "altText": "",
          "url": "{imageHostingUrl}/helpful-resources.jpg",
          "size": "Large",
          "horizontalAlignment": "Center"
        },
        {
          "type": "TextBlock",
          "text": "* [Join the 'Ask B&C School' Webex Teams Space](https://eurl.io/#SJiS9VKTH)\n"
        },
        {
          "type": "TextBlock",
          "text": "* [View the Source for This Card]({cardSourceUrl})"
        },
        {
          "type": "TextBlock",
          "text": "* [View the Source for This App]({appSourceUrl})"
        },
        {
          "type": "TextBlock",
          "text": "* [Official Developer Guide](https://developer.webex.com/docs/api/guides/cards)\n"
        },
        {
          "type": "TextBlock",
          "text": "* [Buttons and Cards Designer](https://developer.webex.com/buttons-and-cards-designer)"
        },
        {
          "type": "TextBlock",
          "text": "* [Adaptive Card Schema Explorer](https://adaptivecards.io/explorer/)"
        },
        {
          "type": "TextBlock",
          "text": "* [Cisco DevNet: Card Sample App](https://developer.cisco.com/codeexchange/github/repo/CiscoDevNet/webex-card-sample/) "
        },
        {
          "type": "Container",
          "items": [
            {
              "type": "TextBlock",
              "text": "Do you have questions, comments or suggestions?\n\nWe'd love to get your feedback on this bot or any aspect of the Webex Teams Buttons and Cards feature.",
              "wrap": true
            },
            {
              "type": "Input.Text",
              "id": "feedback",
              "isMultiline": true,
              "placeholder": "Enter your feedback"
            },
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "title": "Send Feedback",
                  "data": {}
                }
              ]
            }
          ]
        }
      ]
    }
  }
]