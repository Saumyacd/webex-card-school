{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "text": "Sending A Card",
      "size": "Medium",
      "weight": "Bolder",
      "horizontalAlignment": "Center"
    },
    {
      "type": "TextBlock",
      "text": "Applications can send a card the same way they send messages, via the [Webex Teams /messages API](https://developer.webex.com/docs/api/v1/messages/create-a-message).  ",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "A message that includes a card will include an “attachment” field which includes data that tells Webex how to render a card, for example:",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "```json\n{\n  \"roomId\": \"{{roomId}}\",\n  \"text\": \"If you see this message, the card card did not render\",\n  \"attachments\": [\n    {\n      \"contentType\": \"application/vnd.microsoft.card.adaptive\",\n        \"content\": {\n          \"type\": \"AdaptiveCard\",\n          \"version\": \"1.0\",\n          \"body\": [\n            {\n              \"type\": \"TextBlock\",\n              \"text\": \"Here is a logo\"\n            },\n            {\n              \"type\": \"Image\",\n              \"url\": \"https://www.ccsmedia.com/media/WebexTeams_Logo-150x150.png\",\n              \"size\": \"small\"\n            }\n         ]\n       }\n    }\n  ]\n}",
      "wrap": true
    },
    {
      "type": "ActionSet",
      "horizontalAlignment": "center",
      "actions": [
        {
          "type": "Action.Submit",
          "id": "postMessageButton",
          "title": "Try Posting This Message...",
          "data": {
            "customPostMessage": true
          }
        }
      ]
    },
    {
      "type": "Input.ChoiceSet",
      "id": "myCardIndex",
      "isMultiSelect": false,
      "isVisible": false,
      "choices": [
        {
          "title": "Unused Choice",
          "value": "2"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "ActionSet",
          "horizontalAlignment": "Center",
          "actions": [
            {
              "type": "Action.Submit",
              "title": "Next Lesson: Designing a Card",
              "data": {
                "nextLesson": true,
                "lessonIndex": 3
              }
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.ShowCard",
      "title": "Pick Another Lesson",
      "card": {
        "type": "AdaptiveCard",
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "body": [
          {
            "type": "Container",
            "items": [
              {
                "type": "TextBlock",
                "text": "Available Lessons:"
              },
              {
                "type": "Input.ChoiceSet",
                "id": "jumpToLessonIndex",
                "choices": [
                  {
                    "title": "Introduction",
                    "value": "0"
                  },
                  {
                    "title": "Lesson 1: What is a Card?",
                    "value": "1"
                  },
                  {
                    "title": "Lesson 2: Sending A Card",
                    "value": "2"
                  },
                  {
                    "title": "Lesson 3: Designing a Card",
                    "value": "3"
                  },
                  {
                    "title": "Lesson 4: Displaying Complex Info",
                    "value": "4"
                  }
                ]
              },
              {
                "type": "ActionSet",
                "actions": [
                  {
                    "type": "Action.Submit",
                    "title": "Go To Lesson!",
                    "id": "gotoLesson",
                    "data": {
                      "nextLesson": false,
                      "pickAnotherLesson": true
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "type": "Action.ShowCard",
      "title": "More Resources",
      "card": {
        "type": "AdaptiveCard",
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "body": [
          {
            "type": "ActionSet",
            "actions": [
              {
                "type": "Action.OpenUrl",
                "title": "Buttons and Cards Developers Guide",
                "url": "https://developer.webex.com/docs/api/guides/cards"
              },
              {
                "type": "Action.OpenUrl",
                "title": "Buttons and Cards Designer",
                "url": "https://developer.webex.com/adaptive-cards-designer"
              },
              {
                "type": "Action.OpenUrl",
                "title": "See this card's source",
                "url": "https://github.com/jpjpjp/webex-card-school/blob/master/generated/lesson-2.json"
              },
              {
                "type": "Action.OpenUrl",
                "title": "See this App's Source",
                "url": "https://github.com/jpjpjp/webex-card-school"
              },
              {
                "type": "Action.OpenUrl",
                "title": "Join the Ask B&C School Webex Teams Space",
                "url": "https://eurl.io/#SJiS9VKTH"
              }
            ]
          },
          {
            "type": "Container",
            "items": [
              {
                "type": "TextBlock",
                "text": "Do you have questions, comments or suggestions?\n\nWe'd love to get your feedback on this bot or any aspect of the Webex Teams Buttons and Cards feature.",
                "wrap": true
              },
              {
                "type": "Input.Text",
                "id": "feedback",
                "isMultiline": true,
                "placeholder": "Enter your feedback"
              },
              {
                "type": "ActionSet",
                "actions": [
                  {
                    "type": "Action.Submit",
                    "title": "Send Feedback",
                    "data": {}
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ]
}